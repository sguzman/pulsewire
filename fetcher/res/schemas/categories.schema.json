{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "feedrv3 categories",
  "type": "object",
  "additionalProperties": false,
  "required": ["categories"],
  "properties": {
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "domains"],
        "properties": {
          "name": { "type": "string" },
          "domains": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          }
        }
      }
    }
  }
}
