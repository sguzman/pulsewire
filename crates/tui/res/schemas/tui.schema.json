{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "feedrv3 tui config",
  "type": "object",
  "additionalProperties": false,
  "required": ["server", "auth", "ui", "keybindings"],
  "properties": {
    "server": {
      "type": "object",
      "additionalProperties": false,
      "required": ["url", "timeout_ms"],
      "properties": {
        "url": { "type": "string" },
        "timeout_ms": { "type": "integer", "minimum": 100 }
      }
    },
    "auth": {
      "type": "object",
      "additionalProperties": false,
      "required": ["auto_login", "username", "password"],
      "properties": {
        "auto_login": { "type": "boolean" },
        "username": { "type": "string" },
        "password": { "type": "string" }
      }
    },
    "ui": {
      "type": "object",
      "additionalProperties": false,
      "required": ["page_size", "refresh_interval_ms"],
      "properties": {
        "page_size": { "type": "integer", "minimum": 1, "maximum": 200 },
        "refresh_interval_ms": { "type": "integer", "minimum": 50 }
      }
    },
    "keybindings": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "quit",
        "refresh",
        "next_tab",
        "prev_tab",
        "tab_feeds",
        "tab_entries",
        "tab_favorites",
        "tab_folders",
        "move_down",
        "move_up",
        "open_entries",
        "toggle_read",
        "entries_next",
        "entries_prev"
      ],
      "properties": {
        "quit": { "type": "string" },
        "refresh": { "type": "string" },
        "next_tab": { "type": "string" },
        "prev_tab": { "type": "string" },
        "tab_feeds": { "type": "string" },
        "tab_entries": { "type": "string" },
        "tab_favorites": { "type": "string" },
        "tab_folders": { "type": "string" },
        "move_down": { "type": "string" },
        "move_up": { "type": "string" },
        "open_entries": { "type": "string" },
        "toggle_read": { "type": "string" },
        "entries_next": { "type": "string" },
        "entries_prev": { "type": "string" }
      }
    }
  }
}
